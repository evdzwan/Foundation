@inherits LayoutComponentBase

<main>
    <header>
        <section>
            <NavLink href="/" Match="NavLinkMatch.All">Foundation</NavLink>
            <small>Razor Component Library</small>
        </section>

        <aside>
            <button onclick="toggleTheme()">Toggle Theme</button>
        </aside>
    </header>

    <nav>
        <section>
            <label>Components</label>
            <NavLink href="/components/form">Form</NavLink>
            <NavLink href="/components/table">Table</NavLink>
        </section>

        <footer>
            Erik van der Zwan &copy; 2025
        </footer>
    </nav>

    <section>
        @Body
    </section>
</main>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
