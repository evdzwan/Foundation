@inherits LayoutComponentBase

<main>
    <header>
        <section>
            <NavLink href="/" Match="NavLinkMatch.All">Foundation</NavLink>
            <small>Razor Component Library</small>
        </section>

        <aside>
            <button onclick="toggleTheme()">Toggle Theme</button>
        </aside>
    </header>

    <nav>
        <section>
            <label>Components</label>
            <NavLink href="/components/form">
                <svg fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20 3H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2zm-9 14H5v-2h6v2zm8-4H5v-2h14v2zm0-4H5V7h14v2z" />
                </svg>
                Form
            </NavLink>
            <NavLink href="/components/table">
                <svg fill="currentColor" viewBox="0 0 24 24">
                    <path d="M3 5v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2zm7 2h8v2h-8V7zm0 4h8v2h-8v-2zm0 4h8v2h-8v-2zM6 7h2v2H6V7zm0 4h2v2H6v-2zm0 4h2v2H6v-2z" />
                </svg>
                Table
            </NavLink>
        </section>

        <footer>
            Erik van der Zwan &copy; 2025
        </footer>
    </nav>

    <section>
        @Body
    </section>
</main>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
