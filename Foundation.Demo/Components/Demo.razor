@inherits Component

<div class="demo">
    <h3>
        @Title
        @if (New)
        {
            <sup>new</sup>
        }
        @if (WorkInProgress)
        {
            <sup>work in progress</sup>
        }
    </h3>
    <div class="demo-segments">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string? Title { get; set; }

    [Parameter] public bool New { get; set; }
    [Parameter] public bool WorkInProgress { get; set; }
}
